<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Neighborly - Community-Powered Rentals</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<%- include('../partials/header') %>

<main class="container-fluid p-4 p-lg-5 bg-light">
    <%- include('../partials/flash') %>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% for(let listing of allListings) { %>
            <div class="col">
                <a href="/listings/room-sharing/<%= listing.id %>" class="text-decoration-none text-reset">
                <div class="card h-100 shadow-sm hover-shadow-lg transition-all duration-200">
                    <!-- Card Image -->
                    <img 
                        src="<%= listing.imageUrl %>" 
                        class="card-img-top img-fluid" 
                        alt="<%= listing.title %>" 
                        style="height: 250px; object-fit: cover;"
                    >
                    
                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column p-4">
                        <!-- Title -->
                        <h5 class="card-title mb-3 fs-5 fw-bold text-primary">
                            <%= listing.title %>
                        </h5>

                        <!-- Location -->
                        <p class="text-secondary mb-2">
                            <i class="bi bi-geo-alt-fill me-2"></i>
                            <%= listing.location %>
                        </p>

                        <!-- Price Section -->
                        <div class="d-flex justify-content-between align-items-center mb-3 bg-light rounded-pill px-3 py-2">
                            <div class="d-flex align-items-baseline">
                                <span class="text-muted fs-6 me-1">Â£</span>
                                <p class="h4 m-0 fw-bold text-dark">
                                    <%= listing.price.toLocaleString() %>
                                </p>
                            </div>
                            <small class="text-muted fw-medium">/ night</small>
                        </div>

                        <!-- Description -->
                        <p class="card-text text-truncate-3 mb-4 text-muted">
                            <%= listing.description %>
                        </p>

                        <!-- Post Date -->
                        <div class="mt-auto small text-muted">
                            <i class="bi bi-clock-history me-2"></i>
                            Posted <%= listing.postDate.toLocaleDateString() %>
                        </div>
                    </div>
                </div>
                </a>
            </div>
        <% } %>
    </div>
</main>

<%- include('../partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>