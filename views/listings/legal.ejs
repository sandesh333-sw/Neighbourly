<%- include('../partials/header') %>

<link rel="stylesheet" href="/custom.css">

<div class="container my-5">
    <h2 class="text-center mb-5">Legal Rental Listings</h2>
    <p class="text-center">Here are the verified and legally compliant rental properties.</p>
    
    <div class="row">
        <% legalListings.forEach(function(listing) { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="<%= listing.imageUrl %>" class="card-img-top" alt="<%= listing.title %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= listing.title %></h5>
                        <p class="card-text">
                            <strong>Location:</strong> <%= listing.location %><br>
                            <strong>Price:</strong> $<%= listing.price %><br>
                            <%= listing.description %>
                        </p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">Posted: <%= listing.postDate.toDateString() %></small>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer') %>